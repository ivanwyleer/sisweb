<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="#">Home</a></li>
      <li><a href="#">Cadastros - Serviços</a></li>
    </ol>
  </div>
</div>
<h4 class="page-header">Serviços</h4>


<div class="row-fluid">
  
  <div id="dashboard_tabs" class="col-xs-12 col-sm-12">
    <!--Start Dashboard Tab 1-->
    <div id="dashboard-overview" class="row" style="visibility: visible; position: relative;">
      <div id="ow-marketplace" class="col-sm-12 col-md-12">
        <h4 class="page-header">

          <%= link_to(new_service_path, class: "btn btn-info btn-sm") do %>
                <div class="text-left" style="font-size:15px"> 
                         <i style="font-size:22px" class="fa fa-file-o"></i>
                             <span>Novo Serviço</span>
                      </div>
              <% end %>

        </h4>
        
        <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-shopping-cart"></i>
          <span>Lista de Serviços</span>
        </div>
        <div class="no-move"></div>
      </div>
      <div class="box-content no-padding">
        <%= form_tag services_path, :method => 'get' do %>
          <p>
            <%= text_field_tag :search, params[:search] %>
            <%= submit_tag "Buscar", :name => nil %>
          </p>
        <% end %>
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-1">
          <thead>
            <tr>
              <th>Descrição</th>
              <th>Preço</th>
              <th align="center">Ações</th>
            </tr>
          </thead>
          <tbody>
          <!-- Start: list_row -->
            <% @services.each do |service| %>
              <tr>
                <td><%= service.description %></td>
                <td><%= service.price %></td>
                <td align="center">
                <%= link_to(service, class: "btn btn-defaut btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-eye"></i>
                             <span></span>
                      </div>
                <% end %>
                <%= link_to(edit_service_path(service), class: "btn btn-warning btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-edit"></i>
                             <span></span>
                      </div>
               <% end %>
               <%= link_to(service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-times-circle-o"></i>
                             <span></span>
                      </div>
               <% end %>



                </td>
              </tr>
            <% end %>
          <!-- End: list_row -->
          </tbody>
          <tfoot>
            <tr>
              <th>Descrição</th>
              <th>Preço</th>
              <th align="center">Ações</th>
            </tr>
          </tfoot>
        </table>
        <%= will_paginate @services %>
      </div>
    </div>
        
        
        
      </div>
    </div>
