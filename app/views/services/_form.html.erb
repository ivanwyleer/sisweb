<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>

    <div class="container-fluid">
        <div class="row show-grid">
            <div class="col-sm-6 col-xs-6">
                <%= f.input :description, label:'Serviço', :input_html => {class: 'form-control',  placeholder: 'Corte'},  autofocus: true %>
            </div>

            <div class="col-sm-6 col-xs-6">
                <%= f.input :price, label:'Preço',:input_html => {class: 'form-control',  placeholder: 'R$20.00'},  autofocus: true %>
            </div>
            <div class="clearfix visible-xs"></div>
        </div>



        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="form-actions" >
              <%= f.submit 'Confirmar', class: "form-actions btn btn-success btn-block" %>
            </div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6">
              <%= link_to(services_path, class: "form-actions btn btn-danger btn-block") do %>
                <div class="text-center" style="font-size:14px"> 
                   <i class="fa fa-ban"></i>
                        <span>Cancelar</span>
                </div>
              <% end %>
          </div>
        </div>


<% end %>
