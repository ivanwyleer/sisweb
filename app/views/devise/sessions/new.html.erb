<div class="container-fluid">
	<div id="page-login" class="row" >
		<div class="form-group">
			<div class="col-sm-1 col-md-2">
			</div>
			<div class="col-xs-12 col-md-4 col-md-offset-0 col-sm-5 col-sm-offset-0 "style="padding-top: 70px;">
				<div class="box">
					<div class="box-content">
						<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="text-center">
							<h3 class="page-header">SisWeb Login</h3>
						</div>
						<div class="form-group">
							<%= f.input :email, required: false, autofocus: true, input_html:{class: 'form-control', placeholder: "Ex: mail@mail.com"} %>
						</div>
						<div class="form-group">
							<%= f.input :password, label: 'Senha',required: false, input_html:{class: 'form-control', placeholder: 'Senha'} %> 
						</div>
						<div class="text-center">
							<%= f.button :submit, "Log in", class: "btn btn-lg btn-success btn-block"  %>
						</div>
	                   <% end %>
					</div>
				</div>
			</div>
			<div class="col-xs-12 col-md-4 col-md-offset-0 col-sm-5 col-sm-offset-0" style="padding-top: 70px;">
				<div class="box">
					<div class="box-content">
						<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
							<div class="text-center">
								<h3 class="page-header">Não possui cadastro? Inscreva-se!</h3>
								<h5 align="left">É rápido e facil.</h5>
							</div>
							<div class="form-group">
								<%= f.input :email, required: false, autofocus: true, input_html:{class: 'form-control', placeholder: "Ex: mail@mail.com"} %>
							</div>
							<div class="form-group">
								<%= f.input :nome, required: false, autofocus: true, input_html:{class: 'form-control', placeholder: "Ex: João Victor Belo"} %>
							</div>
							<div class="form-group">
								<%= f.input :password, required: false, label: 'Senha', input_html:{class: 'form-control', placeholder: 'Senha'} %> 
							</div>
							<%= f.input :role_id, input_html: {value: 1, type:"hidden"}, :as => :hidden %>
							<div class="checkbox">
								<label>
									<input type="checkbox" checked> Eu gostaria de receber informações de promoções e ofertas.
										<i class="fa fa-square-o small"></i>
								</label>
							</div>
							<div class="text-center">
								<%= f.button :submit, "Cadastrar", class: "btn btn-lg btn-info btn-block"  %>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

