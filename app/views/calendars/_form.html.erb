<%= simple_form_for(@calendar) do |f| %>
  <%= f.error_notification %>

  <div class="container-fluid">
        <div class="row show-grid">
            <div class="col-sm-6 col-xs-6">
                <%= f.association :user, label:'Cliente',label_method: :nome, value_method: :id, include_blank: false, collection: User.where(["role_id = ?","1"]), :input_html => {class: 'form-control', disabled: ''} %>
            </div>

            <div class="col-sm-6 col-xs-6">
                <%= f.input :hair_color, label:'Cor do cabelo', :input_html => {class: 'form-control',  placeholder: 'Castanho escuro',  disabled: ''},  autofocus: true %>
            </div>
            <div class="clearfix visible-xs"></div>
        </div>

        <div class="row show-grid">
            <div class="col-sm-6 col-xs-6">  
                  <%= f.input :hair_size, label:'Tamanho do cabelo', collection: ["Curto", "Medio", "Comprido"], input_html: {class: 'form-control',  disabled: ''} %>
            </div>

            <div class="col-sm-6 col-xs-6">
                  <%= f.input :date_request, label:'Data Marcada', :as => :string, :input_html => {data: {behaviour: "datepicker"},:placeholder => 'Selecione...', class: 'form-control'} %>
            </div>
            <div class="clearfix visible-xs"></div>
        </div>

        <div class="row show-grid">
            <div class="col-sm-6 col-xs-6">
                  <%= f.association :service, label:'Serviço', label_method: :description, value_method: :id, include_blank: false, :input_html => {class: 'form-control', disabled: ''} %>
            </div>

            <div class="col-sm-6 col-xs-6">
                  <%= f.association :professional, label:'Profissional', label_method: :name, value_method: :id, include_blank: false, :input_html => {class: 'form-control'} %>  

            </div>
            <div class="clearfix visible-xs"></div>
        </div>

        <div class="row show-grid">
            <div class="col-sm-12 col-xs-12">
                <%= f.input :observation, label:'Observação', :input_html => {class: 'form-control', disabled: ''}%>
            </div>
            <div class="clearfix visible-xs"></div>
        </div>

          <%= f.input :status, input_html: {value: "Pre-agendado", type:"hidden"}, :as => :hidden %>


        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-6">
            <div class="form-actions" >
              <%= f.submit 'Pré-agendar', class: "form-actions btn btn-success btn-block" %>
            </div>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6">
              <%= link_to(calendars_path, class: "form-actions btn btn-danger btn-block") do %>
                <div class="text-center" style="font-size:13px"> 
                   <i class="fa fa-ban"></i>
                        <span>Cancelar</span>
                </div>
              <% end %>
          </div>
        </div>   
  </div>
<% end %>

 <script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    dateFormat: "dd/mm/yy",
    "weekStart": 1,
    autoclose: true,
    language: "pt-BR"
  });
</script>