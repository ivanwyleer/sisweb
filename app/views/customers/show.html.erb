<p id="notice"><%= notice %></p>

  <div class="row">
    <div id="breadcrumb" class="col-md-12">
      <ol class="breadcrumb">
        <li><a href="#">Home</a></li>
        <li><a href="#">Cadastros - Clientes</a></li>
      </ol>
    </div>
  </div>
  <h4 class="page-header">Visualizar Cadastro</h4>

  <div class="container-fluid">
        <div class="row show-grid">
          <div class="col-sm-6 col-xs-6">
                <strong>E-mail:</strong>
                  <%= @customer.email %>
          </div>

          <div class="col-sm-6 col-xs-6">
                <strong>Nome:</strong>
                   <%= @customer.nome %>
         </div>
        </div>


        <div class="row show-grid">
          <div class="col-sm-12 col-xs-12">
                <strong>Endereco:</strong>
                  <%= @customer.endereco %>
          </div>
        </div>

        <div align="center" class="row show-grid">
          <div class="col-sm-3 col-xs-3">
                <strong>Celular:</strong>
                  <%= @customer.telcelular %>
          </div>

          <div class="col-sm-3 col-xs-3">
                <strong>Operadora:</strong>
                  <%= @customer.operadora_celular %>
         </div>

         <div class="col-sm-3 col-xs-3">
                <strong>Fixo:</strong>
                  <%= @customer.telfixo %>
          </div>

          <div class="col-sm-3 col-xs-3">
                <strong>Operadora:</strong>
                  <%= @customer.operadora_fixo %>
         </div>
        </div>
  </div>    

<br>

        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-6">
            <%= link_to(edit_customer_path(@customer), class: "form-actions btn btn-warning btn-block") do %>
                  <div class="text-center" style="font-size:14px"> 
                     <i class="fa fa-edit"></i>
                          <span>Editar</span>
                  </div>
            <% end %>
          </div>
          <div class="col-md-6 col-sm-6 col-xs-6">
              <%= link_to(customers_path, class: "form-actions btn btn-danger btn-block") do %>
                  <div class="text-center" style="font-size:14px"> 
                     <i class="fa fa-mail-reply"></i>
                          <span>Voltar</span>
                  </div>
                <% end %>
          </div>
        </div>

          <div class="clearfix visible-xs"></div>