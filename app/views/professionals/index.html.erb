            </tr>
          </thead>
          <tbody>
          <!-- Start: list_row -->
            <% @professionals.each do |professional| %>
              <tr>
                <td><%= professional.name %></td>
                <td><%= professional.specialty %></td>
                <td align="center">
                <%= link_to(professional, class: "btn btn-defaut btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-eye"></i>
                             <span></span>
                      </div>
                <% end %>
                <%= link_to(edit_professional_path(professional), class: "btn btn-warning btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-edit"></i>
                             <span></span>
                      </div>
               <% end %>
               <%= link_to(professional, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-times-circle-o"></i>
                             <span></span>
                      </div>
               <% end %>



                </td>
              </tr>
            <% end %>
          <!-- End: list_row -->
          </tbody>
          <tfoot>
            <tr>
              <th>Nome</th>
              <th>Especialidade</th>
              <th align="center">Ações</th>
