<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="#">Home</a></li>
      <li><a href="#">Cadastros - Funcionários</a></li>
    </ol>
  </div>
</div>
<h4 class="page-header">Funcionários</h4>


<div class="row-fluid">
  
  <div id="dashboard_tabs" class="col-xs-12 col-sm-12">
    <!--Start Dashboard Tab 1-->
    <div id="dashboard-overview" class="row" style="visibility: visible; position: relative;">
      <div id="ow-marketplace" class="col-sm-12 col-md-12">
        <h4 class="page-header">

          <%= link_to(new_worker_path, class: "btn btn-info btn-sm") do %>
                <div class="text-left" style="font-size:15px"> 
                         <i style="font-size:22px" class="fa fa-user"></i>
                             <span>Adicionar Funcionário</span>
                      </div>
              <% end %>

        </h4>
        
        <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-users"></i>
          <span>Lista de Funcionários</span>
        </div>
        <div class="no-move"></div>
      </div>
      <div class="box-content no-padding">
          <%= form_tag workers_path, :method => 'get' do %>
            <p>
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :nome => nil %>
            </p>
          <% end %>
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-1">
          <thead>
            <tr>
              <th>E-mail</th>
              <th>Nome</th>
              <th>Celular</th>
              <th>Tel. Fixo</th>
              <th colspan="3">Ações</th>
            </tr>
          </thead>
          <tbody>
          <!-- Start: list_row -->
            <% @workers.each do |worker| %>
              <tr>
                <td><%= worker.email %></td>
                <td><%= worker.nome %></td>
                <td><%= worker.telcelular %></td>
                <td><%= worker.telfixo %></td> 
                <td align="center">
                <%= link_to(worker, class: "btn btn-defaut btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-eye"></i>
                             <span></span>
                      </div>
                <% end %>
                <%= link_to(edit_worker_path(worker), class: "btn btn-warning btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-edit"></i>
                             <span></span>
                      </div>
               <% end %>
               <%= link_to(worker, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm") do%>
                      <div class="text-center" style="font-size:15px"> 
                         <i class="fa fa-times-circle-o"></i>
                             <span></span>
                      </div>
               <% end %>



                </td>
              </tr>
            <% end %>
          <!-- End: list_row -->
          </tbody>
        </table>
      </div>
    </div>
        
        
        
      </div>
    </div>
